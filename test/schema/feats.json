{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"version": "1.2.0",
	"type": "object",
	"properties": {
		"feat": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"prerequisite": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"race": {
									"type": "array",
									"items": {
										"type": "object",
										"properties": {
											"name": {
												"type": "string"
											},
											"subrace": {
												"type": "string"
											}
										},
										"required": ["name"],
										"additionalProperties": false
									}
								},
								"ability": {
									"type": "array",
									"items": {
										"type": "object",
										"properties": {
											"str": {
												"type": "integer"
											},
											"dex": {
												"type": "integer"
											},
											"con": {
												"type": "integer"
											},
											"int": {
												"type": "integer"
											},
											"wis": {
												"type": "integer"
											},
											"cha": {
												"type": "integer"
											}
										},
										"additionalProperties": false
									}
								},
								"spellcasting": {
									"type": "boolean"
								},
								"proficiency": {
									"type": "array",
									"items": {
										"type": "object",
										"properties": {
											"armor": {
												"type": "string",
												"enum": ["light", "medium", "heavy"]
											}
										},
										"required": ["armor"],
										"additionalProperties": false
									}
								},
								"special": {
									"description": "Primarily for use in Homebrew",
									"type": "string"
								},
								"level": {
									"type": "integer"
								}
							},
							"additionalProperties": false
						}
					},
					"source": {
						"type": "string"
					},
					"additionalSources": {
						"$ref": "util.json#/definitions/additionalSources"
					},
					"page": {
						"type": "integer"
					},
					"entries": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					},
					"ability": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"str": {
									"type": "integer"
								},
								"dex": {
									"type": "integer"
								},
								"con": {
									"type": "integer"
								},
								"int": {
									"type": "integer"
								},
								"wis": {
									"type": "integer"
								},
								"cha": {
									"type": "integer"
								},
								"choose": {

									"type": "object",
									"properties": {
										"from": {
											"type": "array",
											"items": {
												"enum": ["str", "dex", "con", "int", "wis", "cha"]
											},
											"uniqueItems": true
										},
										"count": {
											"type": "integer"
										},
										"amount": {
											"type": "integer"
										},
										"weighted": {
											"type": "object",
											"properties": {
												"from": {
													"type": "array",
													"items": {
														"enum": ["str", "dex", "con", "int", "wis", "cha"]
													},
													"uniqueItems": true
												},
												"weights": {
													"type": "array",
													"items": {
														"type": "integer"
													}
												}
											}
										}
									}
								}
							}
						}
					}
				},
				"required": ["name", "source", "entries"],
				"additionalProperties": false
			}
		}
	},
	"required": ["feat"],
	"additionalProperties": false
}
